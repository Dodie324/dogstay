<%- @review.errors.full_messages.each do |error| -%>
  <ul>
    <li><%= error %></li>
  </ul>
<%- end -%>

<div class="row sitter_profile">
  <div class="small-6 large-3 columns">
    <%= image_tag "DMProfile.jpg" %>
  </div>
  <div class="small-6 large-9 columns">
    <div class="row headline" id="sitter_headline">
      <%= @sitter.headline %>
    </div>
    <div class="row address" id="sitter_address">
      <%= @sitter.city %>, <%= @sitter.state %> <%= @sitter.zipcode %>
    </div>
  </div>
  <div class="small-6 large-3 columns">
    <%= @sitter.first_name %>
  </div>
</div>

</div>
  <div class="sitter-profile panel">
    <div class="profile-header">
      <%= @sitter.first_name %> - <%= @sitter.headline %>
    </div>
    <div class="profile-location">
    </div>
    <div class="profile-description">
      <%= @sitter.description %>
    </div>
    <div class="profile-property-type">
      <%= @sitter.property_type %>
    </div>
    <div class="profile-yard-type">
      <%= @sitter.yard_type %>
    </div>
    <div class="profile-children">
      <%= t @sitter.have_dogs.class %>
    </div>
    <div class="profile-children">
      <%= t @sitter.have_children.class %>
    </div>
  </div>

  <div class="small-12 columns" id="ratings_list">
    <%= render "reviews/index" if @reviews %>
    <%= render "reviews/new" %>
  </div>
</div>
