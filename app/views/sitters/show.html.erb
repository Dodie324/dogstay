<% if @errors %>
  <div class="errors">
    <%- @review.errors.full_messages.each do |error| -%>
        <ul>
          <li><%= error %></li>
        </ul>
    <%- end -%>
  </div>
<% end %>

<%= link_to "Contact this sitter!", new_sitter_message_path(@sitter) %>
<div id="sitter-container">
  <div class="row sitter-profile">
    <div class="small-6 large-3 columns">
      <%= image_tag @sitter.image_url.to_s %>
        <div class="row-name">
            <%= @sitter.first_name %> <%= @sitter.last_name[0] + "." %>
        </div>
    </div>
    <div class="small-6 large-9 columns">
      <div class="row headline" id="sitter_headline">
        <%= @sitter.headline %>
      </div>
      <div class="row address" id="sitter_address">
        <%= @sitter.city %>, <%= @sitter.state %> <%= @sitter.zipcode %>
      </div>
      <div class="row addtl-info">
        <%= @sitter.property_type %> | <%= @sitter.yard_type %> | <%= t @sitter.have_dogs.class %> | <%= t @sitter.have_children.class %>
      </div>
    </div>
  </div>

  <hr class="hr">

  <div class="row about-image">
    <div class="small-6 large-6 columns" id="details-column">
      <div class="about-header">About This Sitter</div>
      <div class="panel-about"><%= @sitter.description %></div>
    </div>
    <% if current_user.try(:sitter) %>
      <%= link_to "Share photos!", "#", id: "share-images" %>
    <%= render "images/new" %>
    <% end %>
    <div class="small-6 large-6 columns" id="sitter-uploads">
      <% @images.each do |image| %>
        <%= image_tag image.image_upload.url.to_s %>
      <% end %>
    </div>
  </div>
  </div>
    <hr class="hr">
    <div class="row price">
      <div class="small-3 columns">
        Price
      </div>
      <div class="small-9 columns">
        <% if @sitter.price == nil %>
          <%= "N/A - Please contact " %><%= @sitter.first_name %><%= " for more information" %>
        <% else %>
          <%= "$ "+ @sitter.price + " per day" %>
        <% end %>
      </div>
    </div>
    <hr class="hr">
    <div class="row availability">
      <div class="small-3 columns">
        Availability
      </div>
      <div class="small-9 columns">
        <%= @sitter.availability %>
      </div>
    </div>

    <hr class="hr">

  </div>

  <%= render "reviews/index" if @reviews %>
  <%= render "reviews/new" %>

</div>
